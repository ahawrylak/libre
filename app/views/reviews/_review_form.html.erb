    <h3>Write your review of <%= @book.title %></h3>

    <%= form_for(@review) do |f| %>
      <div>
        <%= hidden_field_tag :book_id, @book.id %>
      </div>

      <div class="field">
        <!-- <%= f.label :content %><br /> -->
        <%= f.text_area :content, class: 'form-control', placeholder: "Write here..." %>
      </div>

      <div class="actions">
        <%= f.submit "Submit review", class: 'btn btn-primary' %>
      </div>
    <% end %>
