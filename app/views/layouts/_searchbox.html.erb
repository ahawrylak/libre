<div class="searchbox">
  <%= form_tag(books_path, method: :get, id: "search-form") do %>
    <%= search_field_tag :search, params[:search], class: "form-control",
                                                   placeholder: "Search for titles/authors" %>
    <%= submit_tag "Search", hidden: true %>

  <% end %>
</div>


